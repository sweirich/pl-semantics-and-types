phi {{ tex \phi }}   :: 'iProp_' ::= 
   {{ com step indexed sets of terms }} 
  | V tau v           :: M :: VT
   {{ tex \mathcal{V}[\![\, [[v]] \in [[tau]]\, ]\!] }}
  | C tau e           :: M :: CT
   {{ tex \mathcal{C}[\![\, [[e]] \in [[tau]]\, ]\!] }}
  | |> phi            :: M :: iLater 
  | phi1 ===> phi2    :: M :: iImp
   {{ tex [[phi1]][[===>]] [[phi2]] }}
  | G sigma           :: M :: iEnv
    {{ tex [\![ [[sigma]] \in [[G]] ]\!] }}
  | ( phi )           :: M :: paren


